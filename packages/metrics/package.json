{
  "name": "pandora-metrics",
  "version": "1.2.6",
  "main": "dist/index",
  "typings": "src/index",
  "scripts": {
    "build": "npm run lint && rm -rf ./dist && ../../node_modules/.bin/tsc",
    "start": "npm run build && node dist/index",
    "lint": "../../node_modules/.bin/tslint --format prose -c ../../tslint.json src/**/*.ts test/**/*.ts",
    "test": "npm run lint && TS_NODE_CACHE=true mocha -t 100000",
    "cov": "TS_NODE_CACHE=true nyc mocha -t 100000",
    "ci": "npm run test",
    "gen-api-ref": "../../node_modules/.bin/typedoc --mode file --hideGenerator --excludeExternals --ignoreCompilerErrors --out ../../docs/api-reference/metrics src/"
  },
  "keywords": [
    "pandora",
    "metrics"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/midwayjs/pandora.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.44",
    "@types/node": "^6.0.92",
    "chai": "^3.5.0",
    "mm": "^2.1.0",
    "mocha": "^3.5.0",
    "node-df": "^0.1.1",
    "nyc": "^11.2.1",
    "sinon": "^4.1.2",
    "supertest": "^3.0.0",
    "yargs": "^6.6.0"
  },
  "dependencies": {
    "address": "^1.0.3",
    "cls-hooked": "^4.2.2",
    "cron-parser": "^2.4.1",
    "debug": "^2.6.8",
    "extend": "^3.0.1",
    "koa": "^2.3.0",
    "koa-router": "^7.2.1",
    "module-hook": "^1.0.0",
    "node-df": "^0.1.1",
    "opentracing": "^0.14.1",
    "pandora-env": "^1.2.4",
    "pandora-messenger": "^1.0.0",
    "pandora-service-logger": "^1.2.4",
    "pidusage": "^1.1.6",
    "shimmer": "^1.1.0",
    "super-event-emitter": "^4.1.4",
    "xorshift": "^1.1.1"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "json",
      "html",
      "lcovonly"
    ],
    "all": true
  },
  "files": [
    "dist",
    "src"
  ]
}
